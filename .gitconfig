[core]
pager = delta

[interactive]
diffFilter = delta --color-only

[delta]
navigate = true

[merge]
conflictstyle = diff3

[diff]
colorMoved = default

[user]
name = Pilo
email = yassel.piloto@duckcreek.com

[alias]
st = status -sb
ci = commit
shove = "!git push --set-upstream origin \"$(git rev-parse --abbrev-ref HEAD)\""
[gcrypt]
	gpg-args = --use-agent
	publish-participants = true
